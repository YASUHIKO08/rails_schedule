<section class = main_contents>
  <div class = home_header>
    <p>予定一覧</p>
    <%= link_to "新規追加", :users_new %>
  </div>
  <table class = table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.start.strftime("%Y年%m月%d日") %></td>
        <td><%= user.end.strftime("%Y年%m月%d日") %></td>
        <td><% if user.all_day == true %>
        ○
        <% elsif user.all_day == false %>
        <% end%>
        </td>
        <td><%= user.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細", user %></td>
        <td><%= link_to "編集", [:edit,user] %></td>
        <td><%= button_to "削除", user, method: :delete, data: { confirm: "本当に削除してよろしいですか？" } %></td>
        <% end %>
    </tbody>
</section>



